{
    "manifest_version": 2,
    "name": "Agro Mark Net",
    "description": "Download Data from Agro Mark Net",
    "version": "1.0.0",
    "content_scripts": [
        {
            "matches": [
                "https://agmarknet.gov.in/*"
            ],
            "js": [
                "dist/content.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "dist/background.js"
        ]
    },
    "permissions": [
        "tabs",
        "downloads",
        "storage",
        "declarativeContent"
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": "/agmarknet_logo.png"
    }
}
